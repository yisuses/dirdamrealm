{
  "parser": "@babel/eslint-parser",
  "extends": "eslint:recommended",
  "ignorePatterns": ["**/types/*.d.ts"],
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "browser": false
  },
  "parserOptions": {
    "requireConfigFile": false,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": false
    },
    "sourceType": "module"
  },
  "globals": {
    "strapi": true
  },
  "rules": {
    "@typescript-eslint/no-var-requires": 0,
    "prettier/prettier": 0,
    "linebreak-style": ["error", "unix"],
    "no-console": 0
  }
}
