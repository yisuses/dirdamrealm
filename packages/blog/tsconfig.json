{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "incremental": true,
    "jsx": "preserve",
    "paths": {
      "@/themes/*": ["./themes/*"],
      "@/public/*": ["./public/*"],
      "@/features/*": ["./features/*"],
      "@/pages/*": ["./pages/*"],
      "@/config/*": ["./config/*"],
      "@/core/*": ["./core/*"],
      "@/components/*": ["./components/*"],
      "@/components": ["./components"]
    }
  },
  "exclude": [".next", "next-env.d.ts"],
  "include": ["src", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.mjs", "**/*.json"]
}
