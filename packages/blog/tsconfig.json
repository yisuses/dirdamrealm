{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "incremental": true,
    "jsx": "preserve",
    "paths": {
      "@components/*": ["./components/*"],
      "@components": ["./components"],
      "@api/*": ["./api/*"],
      "@api": ["./api"],
      "@hooks/*": ["./hooks/*"],
      "@hooks": ["./hooks"],
      "@themes/*": ["./themes/*"],
      "@utils/*": ["./utils/*"],
      "@utils": ["./utils"]
    }
  },
  "exclude": [".next", "next-env.d.ts"],
  "include": ["src", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.mjs", "**/*.json"]
}
