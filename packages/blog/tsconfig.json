{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "incremental": true,
    "jsx": "preserve",
    "paths": {
      "@/components/*": ["./components/*"],
      "@/components": ["./components"],
      "@/config/*": ["./config/*"],
      "@/core/*": ["./core/*"],
      "@/core": ["./core"],
      "@/hooks/*": ["./hooks/*"],
      "@/hooks": ["./hooks"],
      "@/pages/*": ["./pages/*"],
      "@/themes/*": ["./themes/*"],
      "@/utils/*": ["./utils/*"],
      "@/utils": ["./utils"]
    }
  },
  "exclude": [".next", "next-env.d.ts"],
  "include": ["src", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.mjs", "**/*.json"]
}
