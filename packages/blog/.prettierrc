{
  "printWidth": 120,
  "singleQuote": true,
  "semi": false,
  "trailingComma": "all",
  "tabWidth": 2,
  "arrowParens": "avoid",
  "importOrder": ["<THIRD_PARTY_MODULES>", "^@blog/(.*)$", "^[./]"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "semi": true
      }
    }
  ]
}
