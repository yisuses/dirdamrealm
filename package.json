{
  "name": "@yisuses/whemotion-front",
  "version": "1.0.0",
  "description": "White Emotion Blog repository",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:blog": "yarn workspace @yisuses/whemotion-blog start",
    "build:blog": "yarn workspace @yisuses/whemotion-blog build",
    "build:dep:blog": "yarn build:blog && mkdir -p dist && mv packages/blog/build dist/blog",
    "test:blog": "yarn workspace @yisuses/whemotion-blog test",
    "release:blog": "yarn --cwd packages/blog run standard-version",
    "start:common": "yarn workspace @yisuses/whemotion-common start",
    "build:common": "yarn workspace @yisuses/whemotion-common build",
    "build:dep:common": "yarn build:common && mkdir -p dist && mv packages/common/build dist/common",
    "test:common": "yarn workspace @yisuses/whemotion-common test",
    "release:common": "yarn --cwd packages/common run standard-version",
    "releaseall": "run-s \"release:* {@}\" --",
    "release": "node scripts/release.js",
    "clean": "rm -rf dist",
    "build": "yarn clean && run-s build:dep:*",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "yarn test --silent --ci=true --coverage --coverageReporters=cobertura --coverageReporters=lcov --maxWorkers=4",
    "lint": "eslint --fix packages/**/*.{ts,tsx}",
    "ncu": "ncu --deep",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@typescript-eslint/eslint-plugin": "4.29.0",
    "@typescript-eslint/parser": "4.29.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "24.4.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.24.0",
    "husky": "7.0.1",
    "lint-staged": "11.1.2",
    "msw": "0.34.0",
    "npm-check-updates": "11.8.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.2",
    "prompts": "2.4.1",
    "standard-version": "9.3.1",
    "ts-node": "10.1.0"
  }
}
