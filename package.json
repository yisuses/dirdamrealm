{
  "name": "@yisuses/whemotion",
  "version": "1.0.0",
  "description": "White Emotion Blog repository",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:admin": "yarn workspace @whe/admin start",
    "build:admin": "yarn workspace @whe/admin build",
    "build:dep:admin": "yarn build:admin && mkdir -p dist && mv packages/admin/build dist/admin",
    "test:admin": "yarn workspace @whe/admin test",
    "release:admin": "yarn --cwd packages/admin run standard-version",
    "start:common": "yarn workspace @whe/common start",
    "build:common": "yarn workspace @whe/common build",
    "build:dep:common": "yarn build:common && mkdir -p dist && mv packages/common/build dist/common",
    "test:common": "yarn workspace @whe/common test",
    "release:common": "yarn --cwd packages/common run standard-version",
    "start:blog": "yarn workspace @whe/blog dev",
    "build:blog": "yarn workspace @whe/blog build",
    "build:dep:blog": "yarn build:blog && mkdir -p dist && mv packages/blog/build dist/blog",
    "test:blog": "yarn workspace @whe/blog test",
    "release:blog": "yarn --cwd packages/blog run standard-version",
    "releaseall": "run-s \"release:* {@}\" --",
    "release": "node scripts/release.js",
    "clean": "rm -rf dist",
    "build": "yarn clean && run-s build:dep:*",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "yarn test --silent --ci=true --coverage --coverageReporters=cobertura --coverageReporters=lcov",
    "lint": "eslint --fix packages/**/*.{ts,tsx}",
    "ncu": "ncu --deep",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "13.2.1",
    "@commitlint/config-conventional": "13.2.0",
    "@typescript-eslint/eslint-plugin": "5.2.0",
    "@typescript-eslint/parser": "5.2.0",
    "eslint": "8.1.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "25.2.2",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.26.1",
    "husky": "7.0.4",
    "lint-staged": "11.2.6",
    "msw": "0.35.0",
    "npm-check-updates": "11.8.5",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "prompts": "2.4.2",
    "standard-version": "9.3.2",
    "ts-node": "10.4.0"
  }
}
